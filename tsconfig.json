{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["api/_lib/*"]
    }
  },
  "include": ["api/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules", "news-frontend"]
}
