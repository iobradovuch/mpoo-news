generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_UNPOOLED")
}

enum Role {
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique @db.VarChar(50)
  password String @db.VarChar(255)
  role     Role   @default(ADMIN)

  @@map("users")
  @@index([username])
}

model Category {
  id          Int    @id @default(autoincrement())
  name        String @db.VarChar(100)
  description String? @db.Text

  news News[]

  @@map("categories")
}

model News {
  id            Int       @id @default(autoincrement())
  title         String    @db.VarChar(255)
  summary       String?   @db.Text
  content       String    @db.Text
  categoryId    Int?      @map("category_id")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime? @updatedAt @map("updated_at")
  published     Boolean   @default(false)
  publishedDate DateTime? @map("published_date")
  mainImageUrl  String?   @map("main_image_url") @db.VarChar(500)
  sourceUrl     String?   @unique @map("source_url") @db.VarChar(500)

  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  images   NewsImage[]

  @@index([categoryId])
  @@index([published])
  @@index([publishedDate])
  @@index([createdAt])
  @@map("news")
}

model NewsImage {
  id       Int    @id @default(autoincrement())
  newsId   Int    @map("news_id")
  imageUrl String @map("image_url") @db.VarChar(500)

  news News @relation(fields: [newsId], references: [id], onDelete: Cascade)

  @@index([newsId])
  @@map("news_images")
}

model Document {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  fileUrl   String   @map("file_url")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("documents")
}

model Page {
  id        Int       @id @default(autoincrement())
  slug      String    @unique @db.VarChar(100)
  title     String    @db.VarChar(255)
  content   String    @db.Text
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("pages")
}

model TeamMember {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(255)
  position    String    @db.VarChar(255)
  description String    @db.Text
  email       String?   @db.VarChar(255)
  phone       String?   @db.VarChar(20)
  photoUrl    String?   @map("photo_url")
  order       Int       @default(1) @map("display_order")
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")

  @@map("team_members")
}
